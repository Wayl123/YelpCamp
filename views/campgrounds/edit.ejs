<% include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="col-md-12 text-center">
			<h1>Edit Campground</h1>
		</div>
		<div class="center-form">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="camp[name]" placeholder="name" value="<%= campground.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="camp[image]" placeholder="image url" value="<%= campground.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="camp[price]" placeholder="price" value="<%= campground.price %>" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<textarea class="form-control" name="camp[description]" placeholder="description"><%= campground.description %></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary" type="submit">Submit!</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>